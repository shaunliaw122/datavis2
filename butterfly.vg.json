{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/shaunliaw122/datavis2/refs/heads/main/final2.csv",
    "format": {"type": "csv"}
  },
  "spacing": 0,
  "hconcat": [
    {
      "width": 200,
      "height": 360,
      "title": {
        "text": "Energy Emissions (kt)",
        "dy": -40
      },
      "mark": "bar",
      "encoding": {
        "y": {"field": "State", "axis": null},
        "x": {
          "aggregate": "average",
          "field": "Energy Emissions",
          "title": "Emissions (kt)",
          "axis": {"format": "s", "tickCount": 5},
          "sort": "descending",
          "scale": {"domain": [0, 120]}
        },
        "color": {
          "field": "State",
          "legend": {
            "title": "State",
            "orient": "top-right",  
            "anchor": "end",         
            "symbolSize": 100,
            "symbolType": "circle"
          },
          "scale": {
            "range": [
              "#1f77b4",  
              "#ff7f0e",  
              "#2ca02c",  
              "#d62728",  
              "#9467bd",  
              "#8c564b",  
              "#e377c2",  
              "#7f7f7f"   
            ]
          }
        },
        "tooltip": [
          {"field": "State", "title": "State"},
          {
            "aggregate": "average",
            "field": "Energy Emissions",
            "format": ".2f",
            "title": "Avg Energy Emissions (kt)"
          }
        ]
      }
    },
    {
      "width": 40,
      "height": 360,
      "view": {"stroke": null},
      "mark": {"type": "text", "align": "center", "fontWeight": "normal"},
      "encoding": {
        "y": {"field": "State", "axis": null},
        "text": {"field": "State"}
      }
    },
    {
      "width": 200,
      "height": 360,
      "title": {
        "text": "Industrial Emissions (kt)",
        "dy": -40
      },
      "mark": "bar",
      "encoding": {
        "y": {"field": "State", "title": null, "axis": null},
        "x": {
          "aggregate": "average",
          "field": "Industrial Emissions",
          "title": "Emissions (kt)",
          "axis": {"format": "s", "tickCount": 5},
          "scale": {"domain": [0, 120]}
        },
        "color": {
          "field": "State",
          "legend": null,
          "scale": {
            "range": [
              "#1f77b4",  
              "#ff7f0e",  
              "#2ca02c", 
              "#d62728",  
              "#9467bd",  
              "#8c564b",  
              "#e377c2",  
              "#7f7f7f"   
            ]
          }
        },
        "tooltip": [
          {"field": "State", "title": "State"},
          {
            "aggregate": "average",
            "field": "Industrial Emissions",
            "format": ".2f",
            "title": "Avg Industrial Emissions (kt)"
          }
        ]
      }
    }
  ],
  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}

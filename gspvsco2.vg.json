{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Bubble plot showing the relationship between GSP and CO2 emissions by state over time.",
  "width": 1050,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/shaunliaw122/datavis2/refs/heads/main/final2.csv",
    "format": {"type": "csv"}
  },
  "params": [
    {
      "name": "GSP_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 500000,
        "step": 10000,
        "name": "Minimum GSP: "
      }
    },
    {
      "name": "State_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "ACT",
          "NSW",
          "NT",
          "QLD",
          "SA",
          "TAS",
          "VIC",
          "WA"
        ],
        "labels": [
          "Show All",
          "ACT",
          "NSW",
          "NT",
          "QLD",
          "SA",
          "TAS",
          "VIC",
          "WA"
        ],
        "name": "State Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum['GSP (Million $AUD)'] > GSP_Above"},
    {
      "filter": "State_selection == null || datum.State == State_selection"
    }
  ],
  "mark": {
    "type": "circle",
    "size": 150  
  },
  "encoding": {
    "x": {
      "field": "GSP (Million $AUD)",
      "type": "quantitative",
      "title": "GSP (Million $AUD)",
      "axis": {"grid": false}  
    },
    "y": {
      "field": "Emissions",
      "type": "quantitative",
      "title": "CO2 Emissions (kt)",
      "axis": {"grid": false}  
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "legend": {"title": "State"},
      "scale": {
        "range": [
          "#1f77b4",  
          "#ff7f0e",  
          "#2ca02c",  
          "#d62728",  
          "#9467bd",  
          "#8c564b",  
          "#e377c2",  
          "#7f7f7f"   
        ]
      }
    },
    "tooltip": [
      {"field": "State", "type": "nominal", "title": "State"},
      {"field": "Year", "type": "temporal", "title": "Year"},
      {"field": "GSP (Million $AUD)", "type": "quantitative", "title": "GSP (Million $AUD)"},
      {"field": "Emissions", "type": "quantitative", "title": "CO2 Emissions (kt)"}
    ]
  }
}
